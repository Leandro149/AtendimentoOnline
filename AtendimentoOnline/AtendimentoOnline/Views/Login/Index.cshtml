@model AtendimentoOnline.Entidade.Usuario
@{
    Layout = null;
}

<link rel="stylesheet" href="~/Content/css/style.css" type="text/css" />
<link rel="stylesheet" type="text/css" href="~/Content/lib/perfect-scrollbar/css/perfect-scrollbar.min.css" />
<link rel="stylesheet" type="text/css" href="~/Content/lib/material-design-icons/css/material-design-iconic-font.min.css" />
<script src="~/Scripts/jquery-3.1.1.js"></script>
<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<script src="~/Scripts/modernizr-2.6.2.js"></script>
<script src="~/Content/lib/bootstrap/dist/js/bootstrap.min.js" type="text/javascript"></script>

<link href="~/Content/css/login.css" rel="stylesheet" />

<!DOCTYPE html>
<!--[if lt IE 7 ]> <html lang="en" class="no-js ie6 lt8"> <![endif]-->
<!--[if IE 7 ]>    <html lang="en" class="no-js ie7 lt8"> <![endif]-->

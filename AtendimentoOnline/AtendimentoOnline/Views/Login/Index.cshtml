<html lang="en" class="no-js">
 <!--<![endif]-->
<head>
    <meta charset="UTF-8" />
    <!-- <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">  -->
    <title>Login and Registration Form with HTML5 and CSS3</title>
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link href="https://fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

</head>
<body>
    <div class="container">

        <header>
            <h1>Atendimento Gabinete Online</h1>

        </header>
        <section>
            <div id="container_demo">
                <!-- hidden anchor to stop jump http://www.css3create.com/Astuce-Empecher-le-scroll-avec-l-utilisation-de-target#wrap4  -->
                <a class="hiddenanchor" id="toregister"></a>
                <a class="hiddenanchor" id="tologin"></a>
                <div id="wrapper">
                    <div id="login" class="animate form">
                        <form class="form floating-label" action="#" accept-charset="utf-8" method="post">
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
                            <h1>Login</h1>
                            <p>
                                <label for="username" class="uname"> Login </label>
                                @Html.TextBoxFor(l => l.Login, new { id = "username", @class = "form-control", required = "required", placeholder = "Digite o Login" })
                                @Html.ValidationMessageFor(m => m.Login)                                
                            </p>
                            <p>
                                <label for="password" class="youpasswd"> Senha </label>
                                @Html.PasswordFor(l => l.Senha, new { id = "password", @class = "form-control", required = "required", placeholder = "Digite a Senha" })
                                @Html.ValidationMessageFor(m => m.Senha)
                            </p>
                            <p class="login button">
                                <input id="logins" type="submit" value="Login" />
                            </p>
                            <p class="keeplogin">
                                <label for="loginkeeping">Versão 1.0</label>
                            </p>
                            @*<p class="change_link">
                                Not a member yet ?
                                <a href="#toregister" class="to_register">Join us</a>
                            </p>*@
}
                        </form>
                    </div>                   
                </div>
            </div>
        </section>
    </div>
    @if (TempData["mensagem"] == "error")
    {
    <div id="modalError" class="modal-container modal-full-color modal-full-color-primary modal-effect-1 modal-show" style="perspective: none; height: 382px;">
        <div class="modal-content">
            <div class="modal-header">
            </div>
            <div class="modal-body">
                <div class="text-center">
                    <span class="modal-main-icon mdi mdi-info-outline"></span>
                    <h3>Atenção!</h3>
                    <p>Usuário ou Senha Inválido, Digite Novamente</p>
                    <div class="xs-mt-50">
                        <input type="button" value="OK" class="btn btn-default btn-lg btn-space modal-close" id="btnOKError" />
                    </div>
                </div>
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
    }
</body>
</html>

<script>

    $("#logins").on('click', function () {

        if(TempData["mensagem"].ToString() == "error")
            {
        $("#modalError").addClass("modal-show");
    }
    })

    $("#btnOKError").on('click', function () {
        $(location).attr('href', "/Login");
    });

</script>
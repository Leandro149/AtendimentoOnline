@model AtendimentoOnline.Models.HomeModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-content container-fluid">
    <div class="row">
        <div class="col-xs-12 col-md-6 col-lg-3">
            <div class="widget widget-tile">
                <div class="data-info">
                    <div class="desc">Atendimentos em Aberto</div>
                    <div class="value">
                        <span class="indicator indicator-equal mdi mdi-chevron-left"></span><span data-toggle="counter" data-end="113" class="number">0</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-3">
            <div class="widget widget-tile">
                <div class="data-info">
                    <div class="desc">Atendimentos em Andamento</div>
                    <div class="value">
                        <span class="indicator indicator-positive mdi mdi-chevron-left"></span><span data-toggle="counter" data-end="80" data-suffix="%" class="number">0</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-3">
            <div class="widget widget-tile">
                <div class="data-info">
                    <div class="desc">Atendimentos Resolvidos</div>
                    <div class="value">
                        <span class="indicator indicator-positive mdi mdi-chevron-left"></span><span data-toggle="counter" data-end="532" class="number">0</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-3">
            <div class="widget widget-tile">
                <div class="data-info">
                    <div class="desc">Atendimentos Fechados</div>
                    <div class="value">
                        <span class="indicator indicator-negative mdi mdi-chevron-left"></span><span data-toggle="counter" data-end="113" class="number">0</span>
                    </div>
                </div>
            </div>
        </div>
  </div>
</div>

<div class="col-md-12">
    <div class="widget widget-fullwidth">
        <div class="widget-head">
            <div class="tools"></div><span class="title">Atendimentos Mês Atual</span><span class="description">Entrada dos Atendimentos do Mês Vigente</span>
        </div>
        <div class="widget-chart-container">            
            <div class="chart-table xs-pt-15">
                <table class="table table-striped">
                    <thead class="success">
                        <tr>
                            <th>Status</th>
                            <th class="number">Quantidade</th>
                        </tr>
                    </thead>
                    <tbody class="no-border-x">
                        <tr>
                            <td>Windows</td>
                            <td class="number">340</td>
                        </tr>
                        <tr>
                            <td>Mac OS</td>
                            <td class="number">280</td>
                        </tr>
                        <tr>
                            <td>Linux</td>
                            <td class="number">210</td>
                        </tr>
                        <tr>
                            <td>Android</td>
                            <td class="number">176</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


